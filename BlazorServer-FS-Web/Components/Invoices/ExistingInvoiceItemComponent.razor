<EditForm Model=@InvoiceItem OnValidSubmit="@HandleValidSubmit">
    <div class="d-flex flex-row">
        <div class="p-2 col-sm-6">
            <label>@InvoiceItem.Name</label>
        </div>
        <div class="p-2 col-sm-3">
            <label>£@InvoiceItem.Price</label>
        </div>
        <div class="p-2 col-sm-3">
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public InvoiceItem InvoiceItem { get; set; }

    [Parameter]
    public EventCallback<InvoiceItem> OnDelete { get; set; }

    void HandleValidSubmit()
    {
        OnDelete.InvokeAsync(InvoiceItem);
    }
}
